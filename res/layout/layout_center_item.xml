<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayness">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/relativelayout"
        >

        <ImageView
            android:id="@+id/centerIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray" />


        <TextView
            android:id="@+id/centerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/centerIcon"
            android:layout_toEndOf="@+id/centerIcon"
            android:layout_toRightOf="@+id/centerIcon"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <cn.ledoing.view.LCRatingBar
            android:id="@+id/grade_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/centerIcon"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/centerIcon"
            android:isIndicator="true"
            android:maxHeight="10dp"
            android:maxWidth="10dp"
            android:soundEffectsEnabled="true" />


        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/grade_ratingBar"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/grade_ratingBar"
            android:textColor="#FFFDBC2D"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/centerAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/centerName"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/centerIcon"
            android:maxLines="2"
            android:ellipsize = "end"
            android:textColor="#FF40435B"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/grade"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#FFAFB0B7"
            android:textSize="10dp" />


        <View
            android:id="@+id/h_line"
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:layout_below="@+id/distance"
            android:layout_marginTop="20dp"
            android:background="#FFCDCDCD" />


        <ImageView
            android:id="@+id/msg"
            android:layout_width="18dp"
            android:layout_height="17dp"
            android:layout_alignEnd="@+id/h_line"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/h_line"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/msg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/h_line"
            android:background="#99BDBDBD"
            android:layout_height="53dp">
            <LinearLayout
                android:id="@+id/layout_lin"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/teacher_image_one"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="6dp"
                    android:background="@color/gray"

                    />
                <ImageView
                    android:id="@+id/teacher_image_two"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="6dp"
                    android:background="@color/gray"

                    />
                <ImageView
                    android:id="@+id/teacher_image_three"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="6dp"
                    android:background="@color/gray"

                    />
                <ImageView
                    android:id="@+id/teacher_image_four"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="6dp"
                    android:background="@color/gray"

                    />
                <ImageView
                    android:id="@+id/teacher_image_five"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="6dp"
                    android:background="@color/gray"

                    />
                <ImageView
                    android:id="@+id/teacher_image_six"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="6dp"
                    android:background="@color/gray"

                    />
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>