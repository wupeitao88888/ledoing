<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingLeft="15dp"
    android:background="@color/grayness"
    android:paddingRight="15dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/lc_courses_all"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/lc_courses_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/detail_typename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="每日签到"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/detail_balance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="余额"
                android:layout_below="@id/detail_typename"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/detail_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="60"
                android:layout_toRightOf="@+id/detail_balance_text"
                android:layout_below="@id/detail_typename"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/detail_addlecbean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="+100"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/Cambridgeblue" />
            <TextView
                android:id="@+id/detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="2015-8-10 16:20"
                android:layout_below="@id/detail_addlecbean"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#EBEBEB" />


            <TextView
                android:id="@+id/detail_textnote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="#aaaaaa" />
            <TextView
                android:id="@+id/detail_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="备注备注备注备注"
                android:layout_toRightOf="@+id/detail_textnote"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:textColor="#aaaaaa" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>