<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <cn.ledoing.view.LCTitleBar
        android:id="@+id/lc_updatebrithday_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </cn.ledoing.view.LCTitleBar>

    <RelativeLayout
        android:id="@+id/lc_brithday_content"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lc_updatebrithday_title" >

        <RelativeLayout
            android:id="@+id/lc_new_brithday"
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:layout_margin="20dp" >

            <TextView
                android:id="@+id/shengri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="生日"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lc_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/shengri"
                android:hint="请填写"
                android:textColor="@color/selet_title"
                android:textSize="14sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/selet_title" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lc_choice_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/select_lc_city" >

            <TextView
                android:id="@+id/lc_choice_citytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:text="请选择日期"
                android:textColor="#D2D2D5"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/select_lc_city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <com.lc.widget.WheelView
                android:id="@+id/id_province"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.lc.widget.WheelView>

            <com.lc.widget.WheelView
                android:id="@+id/id_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.lc.widget.WheelView>

            <com.lc.widget.WheelView
                android:id="@+id/id_district"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.lc.widget.WheelView>
        </LinearLayout>

        <cn.ledoing.view.LCNoNetWork
            android:id="@+id/lc_brithday_nonet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_lc_city" >
        </cn.ledoing.view.LCNoNetWork>
    </RelativeLayout>

</RelativeLayout>