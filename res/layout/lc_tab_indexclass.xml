<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayness" >

    <com.ab.view.pullview.AbPullToRefreshView
        android:id="@+id/lc_index_pullto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayness" >

        <ListView
            android:id="@+id/xListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#fff" >
        </ListView>
    </com.ab.view.pullview.AbPullToRefreshView>

    <include
        android:id="@+id/lc_index_refresh"
        layout="@layout/lc_layout_refresh"
        android:onClick="mRefresh" />

    <cn.ledoing.view.LCNoNetWork
        android:id="@+id/lc_index_nonet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </cn.ledoing.view.LCNoNetWork>

</RelativeLayout>