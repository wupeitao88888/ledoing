<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3F51B5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35.3dp"
        android:background="#F4F4F4"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14sp"
                android:layout_height="14sp"
                android:layout_marginLeft="10.9dp"
                android:layout_marginRight="20.9dp"
                android:background="@drawable/close" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="чбошод"
                android:textColor="#3F51B5" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_lc_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.lc.widget.WheelView
            android:id="@+id/id_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.lc.widget.WheelView>

        <com.lc.widget.WheelView
            android:id="@+id/id_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.lc.widget.WheelView>

        <com.lc.widget.WheelView
            android:id="@+id/id_district"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.lc.widget.WheelView>
    </LinearLayout>


</LinearLayout>
