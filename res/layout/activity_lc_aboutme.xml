<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg" >

    <cn.ledoing.view.LCTitleBar
        android:id="@+id/lc_aboutme_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
    </cn.ledoing.view.LCTitleBar>

    <RelativeLayout
        android:id="@+id/lc_aboutme_logo"
        android:layout_width="fill_parent"
        android:layout_height="194dp"
        android:layout_below="@id/lc_aboutme_title"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/lechome_logo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lc_aboutme_conmponyInfo"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:layout_below="@id/lc_aboutme_logo"
        android:layout_marginTop="9dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/lc_aboutme_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="公司简介"
            android:textColor="#050505"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/more" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lc_aboutme_conmponywebsite"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:layout_below="@id/lc_aboutme_conmponyInfo"
        android:layout_marginTop="0.5dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/lc_aboutme_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="网站"
            android:textColor="#050505"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="www.ledoing.cn"
            android:textColor="#b2b2b2"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lc_aboutme_conmponyweixin"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:layout_below="@id/lc_aboutme_conmponywebsite"
        android:layout_marginTop="0.5dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/lc_aboutme_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="微信"
            android:textColor="#050505"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="LECHOME"
            android:textColor="#b2b2b2"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lc_aboutme_conmponyphone"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:layout_below="@id/lc_aboutme_conmponyweixin"
        android:layout_marginTop="0.5dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/lc_aboutme_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="商务支持"
            android:textColor="#050505"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="4000068617"
            android:textColor="#b2b2b2"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lc_aboutme_version"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:layout_below="@id/lc_aboutme_conmponyphone"
        android:layout_marginTop="0.5dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/lc_aboutme_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="检查更新"
            android:textColor="#050505"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/vistion"
            android:textColor="#b2b2b2"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lc_downloading_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quan" />

            <TextView
                android:id="@+id/lc_downloading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login"
                android:layout_centerInParent="true"
                android:text="正在更新"
                android:textColor="#05B9CA"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>