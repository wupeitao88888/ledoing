<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13.3dp"
        android:textColor="#AEAEAE"
        android:textSize="14sp"
        android:text="可选中心："
        android:visibility="gone"
        android:id="@+id/center_type" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/center_item_selector"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6.7dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.7dp"
            android:layout_marginTop="16.7dp"
            android:text="北苑活动中心"
            android:textColor="#40435B"
            android:textSize="20.7sp" />


        <TextView
            android:id="@+id/address"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区北苑路甲13号北辰购物中心三层"
            android:textColor="#888996"
            android:textSize="14sp"
            android:layout_marginTop="6.7dp"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title" />


        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010-67728757 "
            android:textColor="#888996"
            android:textSize="14sp"
            android:layout_marginTop="3.3dp"
            android:layout_below="@+id/address"
            android:layout_alignLeft="@+id/address"
            android:layout_alignStart="@+id/address"
            android:layout_marginBottom="16.7dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            android:layout_marginRight="16.7dp"
            android:src="@drawable/center_select"
            android:layout_marginEnd="19dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>
