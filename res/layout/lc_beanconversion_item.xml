<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/grayness">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/lc_beanconversion_left"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@color/Cambridgeblue">

                <TextView
                    android:id="@+id/lc_stutstype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="1"
                    android:layout_centerInParent="true"
                    android:text="已兑换"
                    android:textSize="19sp"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/lc_beanconversion_left">

                <TextView
                    android:id="@+id/lc_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/lc_heanconversion"
                android:layout_width="13dp"
                android:layout_height="match_parent"
                android:background="@drawable/halvingline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/lc_heanconversion"
                android:background="@color/white">


                <TextView
                    android:id="@+id/vouchername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="儿童节奖励"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="19dp" />


                <TextView
                    android:id="@+id/lc_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期"
                    android:layout_alignLeft="@+id/vouchername"
                    android:layout_below="@+id/vouchername"
                    android:textColor="#bcbcbc"
                    android:textSize="10dp"
                    android:layout_marginTop="22dp" />

                <TextView
                    android:id="@+id/lc_expirationdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015年1月1日至2015年2月1日"
                    android:layout_alignLeft="@+id/vouchername"
                    android:layout_below="@+id/lc_time"
                    android:textColor="#bcbcbc"
                    android:textSize="10dp"
                    android:layout_marginTop="8dp" />


                <Button
                    android:id="@+id/lc_stuts_type"
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="兑换"
                    android:textSize="12sp"
                    android:background="@drawable/exchange_button_selector"
                    android:layout_marginRight="15dp"
                    />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>