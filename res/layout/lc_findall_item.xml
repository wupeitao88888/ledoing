<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#818181"

    android:paddingBottom="8dp" >

    <RelativeLayout
        android:id="@+id/lc_find_all"
        android:layout_width="169dp"
        android:layout_height="288dp"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        >

        <ImageView
            android:id="@+id/lc_find_icon"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lc_find_icon" >

            <TextView
                android:id="@+id/lc_find_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="变形金刚星球打站"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/lc_find_praiseall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/lc_find_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/praise" />

                <TextView
                    android:id="@+id/lc_find_praisetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>