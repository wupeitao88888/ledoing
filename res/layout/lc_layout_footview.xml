<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/lc_dialog_other"
        android:layout_width="251dp"
        android:layout_height="143dp"
        android:layout_below="@+id/Lc_dialog_reasonChose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26.6dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grayness" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grayness" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/grayness" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@color/grayness" />

        <EditText
            android:id="@+id/lc_dialog_reasonOther"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:gravity="left|top"
            android:hint="@string/reason_other"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:minLines="6"
            android:textCursorDrawable="@null"
            android:textSize="15dp"
            android:textColor="@color/title_theme_text1"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/lc_dialog_confirmCancel"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_below="@+id/lc_dialog_other"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21.3dp"
        android:gravity="center"
        android:background="@drawable/green_selector"
        android:text="@string/confirm_cancel"
        android:textColor="@color/white_to_black_text_selector"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/lc_dialog_confirmCancel"></RelativeLayout>
</RelativeLayout>
