<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayness">


        <LinearLayout
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="@color/white"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/centerAttention_re"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/centerAttention_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="我关注的"
                        android:textColor="#3F51B5"
                        android:textSize="16dp" />

                    >

                    <View
                        android:id="@+id/left"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="#FFCCCCCC" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/centerAll_re"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/centerAll_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="全部中心"
                        android:textColor="#FF919191"
                        android:textSize="16dp" />

                    <View
                        android:id="@+id/right"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="#FFCCCCCC" />
                </RelativeLayout>

            </LinearLayout>




            <cn.ledoing.view.IndexViewPager
                android:id="@+id/mechange_viewpager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></cn.ledoing.view.IndexViewPager>


        </LinearLayout>
</LinearLayout>
