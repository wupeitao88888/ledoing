<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg" >

    <cn.ledoing.view.LCTitleBar
        android:id="@+id/lc_userinfo_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
    </cn.ledoing.view.LCTitleBar>

    <ScrollView
        android:id="@+id/lc_userinfo_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lc_userinfo_title" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_marginTop="0.5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/color" />

            <LinearLayout
                android:id="@+id/lc_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/lc_usericon"
                    android:layout_width="fill_parent"
                    android:layout_height="81dp"
                    android:background="@drawable/userinfor_item_bg_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="50dp"
                        android:text="@string/usericon"
                        android:textColor="@color/userinfo_text"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/lc_userinfo_usericon"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/touxiang" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lc_username"
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/userinfor_item_bg_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="@string/username"
                        android:textColor="@color/userinfo_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lc_userinfo_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:text="皮皮"
                        android:textColor="@color/userinfo_textinfo"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lc_sex"
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/userinfor_item_bg_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="性别"
                        android:textColor="@color/userinfo_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lc_userinfo_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:textColor="@color/userinfo_textinfo"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lc_birthday"
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/userinfor_item_bg_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="@string/birthday"
                        android:textColor="@color/userinfo_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lc_userinfo_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:text="2015-6-26"
                        android:textColor="@color/userinfo_textinfo"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lc_region"
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/userinfor_item_bg_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="@string/region"
                        android:textColor="@color/userinfo_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lc_userinfo_region"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:text="未填写"
                        android:textColor="@color/userinfo_textinfo"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lc_trainingAid"
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/userinfor_item_bg_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="@string/trainingAid"
                        android:textColor="@color/userinfo_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lc_userinfo_trainingAid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:text="未选择"
                        android:textColor="@color/userinfo_textinfo"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lc_userphone"
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/userinfor_item_bg_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="@string/lc_userphone"
                        android:textColor="@color/userinfo_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lc_userinfo_userphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:text="12345678911"
                        android:textColor="#b2b2b2"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lc_usertime"
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/userinfor_item_bg_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="@string/lc_usertime"
                        android:textColor="#b2b2b2"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lc_userinfo_usertime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:text="2015-6-26"
                        android:textColor="#b2b2b2"
                        android:textSize="14sp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/lc_userinfo_submint"
                    android:layout_width="fill_parent"
                    android:layout_height="37dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/blue_btn_selector"
                    android:text="注销"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/lc_userinfo_chose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#50000000"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/lc_up"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_above="@+id/lc_userinfo_quit"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/lc_userinfo_photo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/lc_question_bg_select" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="相册"
                    android:textColor="@drawable/jxb_text_normal"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:id="@+id/linse"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#C4C4C4" />

            <RelativeLayout
                android:id="@+id/lc_userinfo_creame"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/lc_question_bg_select" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="相机"
                    android:textColor="@drawable/jxb_text_normal"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lc_userinfo_quit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:background="@drawable/lc_question_bg_select" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="取消"
                android:textColor="@drawable/jxb_text_normal"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <cn.ledoing.view.LCNoNetWork
        android:id="@+id/lc_userinfo_nonet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/lc_userinfo_title" >
    </cn.ledoing.view.LCNoNetWork>

</RelativeLayout>